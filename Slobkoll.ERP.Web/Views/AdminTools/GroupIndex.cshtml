@{
    ViewBag.Title = "Список групп";
    Layout = "~/Views/Shared/_LayoutAdminTools.cshtml";
}

<h2>Список Групп</h2>

<p>
    @Html.ActionLink("Создать новую группу", "GroupCreate")
</p>
<table class="table">
    <tr>
        <th>Название</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <p>@item.Name</p>
        </td>
        <td>
            @Html.ActionLink("Редактировать", "GroupEdit", new { id = item.Id }) |
            @Html.ActionLink("Детали", "GroupDetails", new { id = item.Id })
        </td>
    </tr>
}

</table>
