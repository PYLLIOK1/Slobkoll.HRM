
@{
    ViewBag.Title = "Отчеты";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@{
    string now = DateTime.Now.ToShortDateString();
    string mes = DateTime.Now.AddMonths(-1).ToShortDateString();
    string twoweek = DateTime.Now.AddDays(-14).ToShortDateString();
}

<h2>Отчет о работе персонала с системой</h2>
<div>
    <input type="text" name="name" id="search" class="datetimepicker1" />
    <input type="text" name="name1" id="search1" class="datetimepicker1" />
    <input type='button' id="submit" value='Вывести' />
</div>
<div style="margin-right:12px;float:left;">
    @Ajax.ActionLink("За месяц", "ReportsSearch", new { date1 = mes, date2 = now }, new AjaxOptions { UpdateTargetId = "results" }, new {@style = "color: red;" })
    @Ajax.ActionLink("За две недели", "ReportsSearch", new { date1 = twoweek, date2 = now }, new AjaxOptions { UpdateTargetId = "results" }, new {@style = "color: red;" })
    @Ajax.ActionLink("За сегодня", "ReportsSearch", new { date1 = now, date2 = now }, new AjaxOptions { UpdateTargetId = "results" }, new {@style = "color: red;" })
</div>
<div id="results"></div>
